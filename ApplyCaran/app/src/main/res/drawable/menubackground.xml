<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/MellowRed" />
            <stroke
                android:width="1dp"
                android:color="@color/MellowRed" />
            <corners
                android:radius="5dp"/>

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/MellowRed"
                android:endColor="@color/MellowRed"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/MellowRed" />
            <corners
                android:radius="5dp"/>

        </shape>
    </item>
</selector>